{	
  "extends": "../../tsconfig.json",
  "compilerOptions": {
	"resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
		"@domains/*": ["src/domains/*"],
		"@checkers/*": ["src/checkers/*"],
		"@security/*": ["src/security/*"],
		"@providers/*": ["src/providers/*"],
		"@types": ["src/types.d.ts"],
		"@src/*": ["src/*"],
		"@test/*": ["test/*"],
	},
	"types": ["@duplojs/core/globals", "vitest/globals", "node"]
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
}